<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-gray-200 text-gray-800 w-full">

<div class="flex h-screen  overflow-hidden ">

    <!-- ================= LEFT SIDEBAR ================= -->
    <aside class="w-64 bg-white border-r-gray-500 shadow-sm flex flex-col
              sticky top-0 h-screen ">


        <!-- LOGO -->
        <div
         class="px-6 py-4 border-t-gray-500 ">
            <a asp-controller="SuperAdmin" asp-action="SuperAdminDashboard"
            class="no-underline text-xl font-bold text-gray-700">
                MARS MELA
            </a>
        </div>

        <!-- MENU -->
        <nav class="flex-1 px-4 space-y-2 py-4 no-underline">

            <a asp-controller="SuperAdmin" asp-action="SuperAdminDashboard"
               class="flex items-center px-4 py-2 rounded-lg bg-blue-100 text-blue-600 font-medium no-underline">
                Dashboard
            </a>

            <a asp-controller="SuperAdmin" asp-action="CreateTradeFair"
               class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-100 no-underline">
                Trade Fairs
            </a>

            <a asp-controller="SuperAdmin" asp-action="MelaAdmin"
               class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-100 no-underline">
                Admins
            </a>

            <a href="#" class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-100 no-underline">
                Reports
            </a>

            <a href="#" class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-100 no-underline">
                Settings
            </a>
        </nav>

        <!-- LOGOUT -->
        <div class="p-4 border-t-gray-700">
            <form asp-controller="SuperAdmin" asp-action="Logout" method="post">
                <button class="w-full text-left px-4 py-2 rounded-lg hover:bg-red-50 text-red-600">
                    Logout
                </button>
            </form>
        </div>

    </aside>

    <!-- ================= MAIN CONTENT ================= -->
    <div class="flex-1 flex flex-col sticky top-0">

        <!-- TOP NAVBAR -->
        <header class="bg-white shadow-sm px-6 py-2 flex justify-between items-center sticky top-0 z-10">

            <h1 class="text-2xl font-semibold">
               
            </h1>

            <div class="flex items-center gap-3">
                <div class="text-right">
                    <div class="font-medium">Super Admin</div>
                    <div class="text-sm text-gray-500">admin@gmail.com</div>
                </div>

                <div class="w-10 h-10 rounded-full bg-orange-300 flex items-center justify-center font-bold text-white">
                    SA
                </div>
            </div>

        </header>

        <!-- PAGE CONTENT -->
        <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
            @RenderBody()
        </main>

    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
