<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARS_MELA_PROJECT</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="min-h-screen flex flex-col bg-gray-100 w-full">

    <!-- HEADER / NAVBAR -->
    <header class="bg-white shadow-md">
        <nav class="px-4">
            <div class="flex h-16 items-center justify-between">

                <!-- Logo -->
                <a asp-area="" asp-controller="Account" asp-action="Index" class="text-2xl  font-semibold text-gray-700 text-shadow-zinc-700 no-underline">
                    MARS MELA
                </a>

                <!-- Menu -->
                @* <div class="hidden md:flex space-x-6">
                    <a asp-controller="Account" asp-action="Index" class="text-gray-600 hover:text-blue-600 transition">
                        Home
                    </a>

                    <a asp-controller="Account" asp-action="Privacy"
                        class="text-gray-600 hover:text-blue-600 transition">
                        Privacy
                    </a>
                </div> *@

                <!-- Auth buttons -->
                <div class="hidden md:flex items-center gap-4">
                    <a asp-controller="Account" asp-action="SignIn" class=btn-primary">
                        Login
                    </a>

                    <a asp-controller="Account" asp-action="SignUp" class=btn-primary">
                        SignUp
                    </a>
                </div>


                <!-- Mobile menu button -->
                <button id="menuBtn" class="md:hidden text-gray-600 focus:outline-none">
                    ☰
                </button>
            </div>

            <!-- Mobile menu -->
            <div id="mobileMenu" class="hidden md:hidden pb-4 space-y-2">
                <a asp-controller="Account" asp-action="Index" class="block text-gray-600">Home</a>
                <a asp-controller="Account" asp-action="Privacy" class="block text-gray-600">Privacy</a>
                <a asp-controller="Account" asp-action="SignIn" class="block text-gray-600">Sign In</a>
                <a asp-controller="Account" asp-action="SignUP" class="block bg-blue-600 text-white px-4 py-2 rounded">
                    Sign Up
                </a>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-1 w-full">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t">
        <div class="max-w-7xl mx-auto px-4 py-4 text-center text-gray-500 text-sm">
            © 2025 MARS_MELA_PROJECT ·
            <a asp-controller="Account" asp-action="Privacy" class="text-blue-600 hover:underline">
                Privacy
            </a>
        </div>
    </footer>

    <!-- Tailwind-friendly JS (optional) -->
    <script>
        const btn = document.getElementById('menuBtn');
        const menu = document.getElementById('mobileMenu');
        if (btn) {
            btn.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>