<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title - MARS MELA</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Site CSS -->
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@

    <style>
        .navbar .nav-link.active {
            background-color: rgba(255,255,255,0.25);
            font-weight: 600;
            border-radius: 6px;
        }


    </style>
    <link rel="stylesheet" href="~/MARS_MELA_PROJECT.styles.css" asp-append-version="true" />
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- ================= NAVBAR ================= -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top"
             style="background: linear-gradient(90deg, #0d6efd, #0b5ed7);">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center"
                   asp-controller="SuperAdmin" asp-action="SuperAdminDashboard">
                    <i class="bi bi-building me-2 fs-4"></i>
                    <div>
                        MARS MELA
                        <div class="small fw-normal text-light opacity-75">
                            Super Admin Panel
                        </div>
                    </div>
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- Left Menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-1">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "SuperAdminDashboard" ? "active" : "")"
                               asp-controller="SuperAdmin" asp-action="SuperAdminDashboard">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        <!-- Create Fair -->
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "CreateTradeFair" ? "active" : "")"
                               asp-controller="SuperAdmin" asp-action="CreateTradeFair">
                                <i class="bi bi-calendar-plus me-1"></i> Create Fair
                            </a>
                        </li>

                        <!-- Update Fair -->
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "UpdateTradeFair" ? "active" : "")"
                               asp-controller="SuperAdmin" asp-action="UpdateTradeFair">
                                <i class="bi bi-pencil-square me-1"></i> Update Fair
                            </a>
                        </li>

                        <!-- Create Fair Admin -->
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "MelaAdmin" ? "active" : "")"
                               asp-controller="SuperAdmin" asp-action="MelaAdmin">
                                <i class="bi bi-person-badge me-1"></i> Create Fair Admin
                            </a>
                        </li>

                        <!-- Update Fair Admin -->
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "UpdateFairAdmin" ? "active" : "")"
                               asp-controller="SuperAdmin" asp-action="UpdateFairAdmin">
                                <i class="bi bi-person-gear me-1"></i> Update Fair Admin
                            </a>
                        </li>

                    </ul>




                    <!-- Right -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <form asp-controller="SuperAdmin" asp-action="Logout" method="post">
                                <button type="submit"
                                        class="btn btn-outline-light btn-sm px-3">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- ================= MAIN ================= -->
    <main class="container my-4 flex-grow-1">
        <div class="card shadow-sm border-0 p-4">
            @RenderBody()
        </div>
    </main>

    <!-- ================= FOOTER ================= -->
    <footer class="border-top bg-white py-3">
        <div class="container text-center small text-muted">
            © 2025 <strong>MARS MELA</strong> <br />
            Designed & Developed for Administration Panel
        </div>
    </footer>

    <!-- ================= SCRIPTS ================= -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
