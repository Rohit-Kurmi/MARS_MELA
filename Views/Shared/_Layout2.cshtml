<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- HEADER / NAVBAR -->
    <header class="bg-white shadow-sm">
        <nav class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">

            <a asp-controller="SuperAdmin" asp-action="Dashboard"
               class="text-xl font-semibold text-blue-700">
                MARS MELA
            </a>

            <div class="flex items-center space-x-6">

                <a asp-controller="SuperAdmin" asp-action="SuperAdminDashboard"
                   class="text-gray-700 hover:text-blue-600 font-medium">
                    Home
                </a>

                <a asp-controller="SuperAdmin" asp-action="CreateTradeFair"
                   class="text-gray-700 hover:text-blue-600 font-medium">
                    Create Trade Fair
                </a>

                <a asp-controller="SuperAdmin" asp-action="MelaAdmin"
                   class="text-gray-700 hover:text-blue-600 font-medium">
                    Create Mela Admin
                </a>

                <form asp-controller="SuperAdmin" asp-action="Logout" method="post">
                    <button type="submit"
                            class="px-4 py-2 border border-blue-600 text-blue-600
                                   rounded-full hover:bg-blue-600 hover:text-white transition">
                        Logout
                    </button>
                </form>

            </div>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <main class="max-w-7xl mx-auto px-6 py-8">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t py-4 text-center text-sm text-gray-500">
        © 2025 - MARS_MELA_PROJECT
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
