@model MARS_MELA_PROJECT.Models.ForgotPassword;

@{
    ViewData["Title"] = "ForgotPassword";
}



@if (TempData["frogetpassmessage"] != null)
{
    <script>
        alert("@TempData["frogetpassmessage"]");
    </script>
}




<h1>Forgot Password</h1>




<form asp-action="ForgotPassword" asp-controller="Account" method="post">
    <div class="container">

        <br /><br />
        <div class="row">
            <div class="col-sm-4">
                <input asp-for="MobileNo" class="form-control" placeholder="Mobile No." />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
        </div>
        <br /><br />

        <div class="row">
            <div class="col-sm-4">
                <input asp-for="EmailID" class="form-control" placeholder="Email ID" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-4">
                <input type="submit" class="btn btn-outline-primary  w-100" value="Reset" />
            </div>
        </div>

    </div>
</form>