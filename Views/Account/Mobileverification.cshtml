@model MARS_MELA_PROJECT.Models.Mobileverification;
@{
    ViewData["Title"] = "Mobileverification";
}

<h1>Mobile Verification</h1>

@if (TempData["emailupdate"] != null)
{
    <script>
        alert("@TempData["emailupdate"]");
    </script>
}

<form asp-action="Mobileverification" asp-controller="Account" method="post">
    <div class="container">

        <br /><br />

        <!-- Mobile -->
        <div class="row">
            <div class="col-sm-4">
                <input asp-for="MobileNo" class="form-control" placeholder="MobileNo" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
        </div>

        <br /><br />

        <!-- OTP -->
        <div class="row">
            <div class="col-sm-2">
                <input asp-for="OTPCode" class="form-control" placeholder="Enter OTP" />
                <span asp-validation-for="OTPCode" class="text-danger"></span>
                <br />
            </div>

            <div class="col-sm-2">
                <!-- Send / Resend OTP Button -->
                <button type="submit" id="otp-btn" name="actiontype" value="Send_OTP" class="btn btn-outline-primary w-100">
                    Send OTP
                </button>

                <!-- Countdown Timer -->
                <div id="otp-timer" class="mt-2" style="display:none;">
                    Please wait <span id="timer">60</span> seconds to resend OTP.
                </div>

                @if (TempData["OTPMessage"] != null)
                {
                    <div class="alert alert-info mt-2">@TempData["OTPMessage"]</div>
                }
            </div>
        </div>

        <br />

        <!-- Submit -->
        <div class="row">
            <div class="col-sm-4">
                <input type="submit" class="btn btn-outline-primary w-100" value="Submit" name="actiontype" />
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <script>alert("@TempData["Error"]");</script>
        }

    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Only start timer if backend says so
            var startTimer = "@TempData["StartOTPTimer"]";
            if(startTimer === "true") {
                startOtpTimer();
            }
        });

        function startOtpTimer() {
            var otpBtn = document.getElementById('otp-btn');
            var timerDiv = document.getElementById('otp-timer');
            var timerSpan = document.getElementById('timer');

            otpBtn.disabled = true;
            timerDiv.style.display = 'block';

            var timeLeft = 60; // seconds
            timerSpan.textContent = timeLeft;

            var countdown = setInterval(function() {
                timeLeft--;
                timerSpan.textContent = timeLeft;

                if(timeLeft <= 0){
                    clearInterval(countdown);
                    otpBtn.disabled = false; // enable button
                    timerDiv.style.display = 'none'; // hide timer
                }
            }, 1000);
        }
    </script>
}
