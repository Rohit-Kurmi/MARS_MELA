@model MARS_MELA_PROJECT.Models.CreateTradeFair
@{
    ViewData["Title"] = "Create Trade Fair";
    Layout = "_Layout2";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-11 col-md-12">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0 text-center">Create Trade Fair</h4>
                </div>

                <div class="card-body px-4 py-4">

                    <form asp-action="CreateTradeFair" asp-controller="SuperAdmin" method="post" enctype="multipart/form-data" novalidate>

                        <!-- ================== SECTION 1: Address ================== -->
                        <h5 class="mb-3 text-primary">Address Details</h5>
                        <div class="row g-3 mb-4">

                            <div class="col-md-6">
                                <label asp-for="FairName" class="form-label fw-semibold"></label>
                                <input asp-for="FairName" class="form-control" />
                                <span asp-validation-for="FairName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Division" class="form-label fw-semibold"></label>
                                <input asp-for="Division" class="form-control" />
                                <span asp-validation-for="Division" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="District" class="form-label fw-semibold"></label>
                                <input asp-for="District" class="form-control" />
                                <span asp-validation-for="District" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Tehsil" class="form-label fw-semibold"></label>
                                <input asp-for="Tehsil" class="form-control" />
                                <span asp-validation-for="Tehsil" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-semibold"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr />

                        <!-- ================== SECTION 2: Dates ================== -->
                        <h5 class="mb-3 text-primary">Trade Fair Dates</h5>
                        <div class="row g-3 mb-4">

                            <div class="col-md-3">
                                <label asp-for="StartDate" class="form-label fw-semibold"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="EndDate" class="form-label fw-semibold"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="ApplyStartDate" class="form-label fw-semibold"></label>
                                <input asp-for="ApplyStartDate" type="date" class="form-control" />
                                <span asp-validation-for="ApplyStartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="ApplyEndDate" class="form-label fw-semibold"></label>
                                <input asp-for="ApplyEndDate" type="date" class="form-control" />
                                <span asp-validation-for="ApplyEndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr />

                        <!-- ================== SECTION 3: Contacts & Logo ================== -->
                        <h5 class="mb-3 text-primary">Contacts & Logo</h5>
                        <div class="row g-3 mb-4">

                            <div class="col-md-6">
                                <label asp-for="FairLogo" class="form-label fw-semibold">Fair Logo</label>
                                <input asp-for="FairLogo" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
                                <span asp-validation-for="FairLogo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ContactMobile1" class="form-label fw-semibold"></label>
                                <input asp-for="ContactMobile1" class="form-control" />
                                <span asp-validation-for="ContactMobile1" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ContactMobile2" class="form-label fw-semibold"></label>
                                <input asp-for="ContactMobile2" class="form-control" />
                                <span asp-validation-for="ContactMobile2" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ContactEmail" class="form-label fw-semibold"></label>
                                <input asp-for="ContactEmail" class="form-control" />
                                <span asp-validation-for="ContactEmail" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2">
                                Save Trade Fair
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
